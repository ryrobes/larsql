{
  "cascade_id": "ward_blocking_flow",
  "description": "Demonstrates blocking mode - wards that abort execution on failure",
  "inputs_schema": {
    "content": "Content to publish"
  },
  "cells": [
    {
      "name": "safety_check",
      "instructions": "Review this content for publication:\n\n{{ input.content }}\n\nProvide your analysis.",
      "wards": {
        "pre": [
          {
            "validator": "simple_validator",
            "mode": "blocking"
          }
        ],
        "post": [
          {
            "validator": "content_safety",
            "mode": "blocking"
          },
          {
            "validator": "grammar_check",
            "mode": "blocking"
          }
        ]
      },
      "rules": {
        "max_turns": 1
      },
      "handoffs": [
        "publish"
      ]
    },
    {
      "name": "publish",
      "instructions": "Content passed all safety and quality wards!\n\nConfirm it's ready for publication.",
      "context": {
        "from": [
          "previous"
        ]
      },
      "traits": [
        "set_state"
      ]
    }
  ]
}