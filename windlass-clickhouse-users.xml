<?xml version="1.0"?>
<clickhouse>
    <users>
        <default>
            <!-- Remove password requirement for local development -->
            <password remove="1"/>
            <no_password>1</no_password>

            <!-- Keep all default permissions -->
            <networks>
                <ip>::/0</ip>
            </networks>
            <profile>default</profile>
            <quota>default</quota>
        </default>
    </users>
</clickhouse>
